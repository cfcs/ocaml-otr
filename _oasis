Library "tests"
  Path            : tests/
  Modules         : Unittests
  Install         : false
  Build          $: flag(tests)
  BuildDepends    : otr, oUnit, cstruct.unix

Executable "test_runner"
  Build          $: flag(tests)
  Path            : tests/
  Install         : false
  CompiledObject  : native
  MainIs          : unittestrunner.ml
  BuildDepends    : otr, tests

Executable "feedback"
  Build          $: flag(tests)
  Path            : tests/
  Install         : false
  CompiledObject  : native
  MainIs          : feedback.ml
  BuildDepends    : otr

Test it
  Command         : $test_runner -runner sequential
  Run            $: flag(tests)

