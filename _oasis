Library "otr"
  Path            : src/
  Modules         : Tracing, Packet, Control, Crypto, State, Ratchet, Builder, Parser, Ake, Smp, Engine, Utils
  Pack            : true
  BuildDepends    : cstruct, cstruct.syntax, sexplib.syntax, nocrypto, astring
